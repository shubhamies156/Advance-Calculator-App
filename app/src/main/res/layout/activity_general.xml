<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/e"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".General">

    <EditText
        android:id="@+id/editTextGen"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:layout_marginBottom="1pt"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="end|center"
        android:inputType="number"
        android:text="0"
        android:textSize="30pt" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buAC"
                android:layout_width="30pt"
                android:layout_height="32pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_red_light"
                android:text="AC"
                android:onClick="acEvent"
                android:textSize="20sp"></Button>

            <Button
                android:id="@+id/buPlusMinus"
                android:layout_width="30pt"
                android:layout_height="32pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_red_light"
                android:text="-ve"
                android:onClick="numberEvent"
                android:textSize="20sp"></Button>


            <Button
                android:id="@+id/buPercent"
                android:layout_width="30pt"
                android:layout_height="34pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_red_light"
                android:text="%"
                android:onClick="percentEvent"
                android:textSize="20sp">

            </Button>

            <Button
                android:id="@+id/buMultiply"
                android:layout_width="30pt"
                android:layout_height="32pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_red_light"
                android:text="*"
                android:onClick="operatorEvent"
                android:textSize="20sp"></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary"
                android:onClick="numberEvent"
                android:text="7"
                android:textSize="20sp"></Button>

            <Button
                android:id="@+id/bu8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary"
                android:onClick="numberEvent"
                android:text="8"
                android:textSize="20sp"></Button>

            <Button
                android:id="@+id/bu9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary"
                android:onClick="numberEvent"
                android:text="9"
                android:textSize="20sp"></Button>
            <Button
                android:id="@+id/buDivide"
                android:layout_width="30pt"
                android:layout_height="32pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_red_light"
                android:text="/"
                android:onClick="operatorEvent"
                android:textSize="20sp"></Button>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary"
                android:onClick="numberEvent"
                android:text="4"
                android:textSize="20sp"></Button>

            <Button
                android:id="@+id/bu5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary"
                android:onClick="numberEvent"
                android:text="5"
                android:textSize="20sp"></Button>

            <Button
                android:id="@+id/bu6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary"
                android:onClick="numberEvent"
                android:text="6"
                android:textSize="20sp"></Button>

            <Button
                android:id="@+id/buPlus"
                android:layout_width="30pt"
                android:layout_height="34pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_red_light"
                android:text="+"
                android:onClick="operatorEvent"
                android:textSize="20sp">

            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary"
                android:onClick="numberEvent"
                android:text="1"
                android:textSize="20sp"></Button>

            <Button
                android:id="@+id/bu2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary"
                android:onClick="numberEvent"
                android:text="2"
                android:textSize="20sp"></Button>

            <Button
                android:id="@+id/bu3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary"
                android:onClick="numberEvent"
                android:text="3"
                android:textSize="20sp"></Button>

            <Button
                android:id="@+id/buMinus"
                android:layout_width="30pt"
                android:layout_height="34pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_red_light"
                android:text="-"
                android:onClick="operatorEvent"
                android:textSize="20sp"></Button>
        </TableRow>
    </TableLayout>

 <LinearLayout
     android:orientation="horizontal"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"

     >
     <TableRow
         android:layout_width="match_parent"
         android:layout_height="match_parent">

         <Button
             android:id="@+id/buO"
             android:layout_width="46pt"
             android:layout_height="31pt"
             android:layout_margin="1pt"
             android:layout_weight="2"
             android:background="@color/design_default_color_primary"
             android:text="O"
             android:onClick="numberEvent"
             android:textSize="20sp"></Button>

         <Button
             android:id="@+id/buDot"
             android:layout_width="46pt"
             android:layout_height="31pt"
             android:layout_margin="1pt"
             android:layout_weight="1"
             android:background="@color/design_default_color_primary"
             android:text="."
             android:onClick="numberEvent"
             android:textSize="20sp"></Button>

         <Button
             android:id="@+id/buEqual"
             android:layout_width="46pt"
             android:layout_height="36pt"
             android:layout_margin="1pt"
             android:layout_weight="1"
             android:backgroundTint="@android:color/holo_red_light"
             android:text="="
             android:onClick="equalEvent"
             android:textSize="20sp"></Button>
     </TableRow>

 </LinearLayout>
</LinearLayout>
